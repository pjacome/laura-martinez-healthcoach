        'year': -1,
        'loc_FirstDay': {
            'r': -1, 'c': -1
        },
        'loc_TargetDay': {
            'r': -1, 'c': -1
        },
        'loc_LastDay': {
            'r': -1, 'c': -1
        },
        'previousMonth': {
            'lastDay': -1,
            'month': -1,
            'year': -1,
            'loc_LastDay': {
                'r': -1, 'c': -1
            }
        }
