    /*
        Purpose: Removes any styling in the calendar display including the days
                    written in the month
    */
    function ClearMonth() {
        for(var row = 1; row < 7; ++row) {
            for(var col = 1; col < 8; ++col) {
                var calendarCell = '.row_' + row + ' .col_' + col;
                var dayIterator = calendarCell + ' .dayNumberOfMonth';
                $(calendarCell).removeClass('next-month');
                $(calendarCell).removeClass('previous-month');
                $(calendarCell).removeClass('current-day');
                $(dayIterator).html('');
            }
        }

        $('.header-day-of-the-week').html('');
        $('.header-day-number').html('');
        $('.header-month').html('');
        $('.header-year').html('');
    }

    function BuildCurrentMonthObject(targetMonth, targetYear) {
        console.log(
            '\n----------------------------------------\n' +
            'Target Month: '+targetMonth+'\n' +
            'Target Year : '+targetYear+ '\n'
        );

        g_CurrMonthObj.month = targetMonth;
        g_CurrMonthObj.year = targetYear;

        if(targetYear % 4 === 0) {
            g_DaysPerMonth_CurrYear[1] = 29;
        } else {
            g_DaysPerMonth_CurrYear[1] = 28;
        }

        // Calculate the location of the first day of this month
        var n_DaysFromTheFirst = SumDaysWithinMonths(g_DaysPerMonth_CurrYear, g_ReferenceObj.month, targetMonth);
        var n_YearsFromOrigin = SumDaysWithinYears(g_ReferenceObj.year, targetYear);
        n_DaysFromTheFirst += n_YearsFromOrigin;

        console.log('n_DaysFromTheFirst:>',n_DaysFromTheFirst);

        // make the year's week begin on a Sunday
        var n_DaysInAWeek = 7;
        var totalDaysLeft = n_DaysFromTheFirst;
        // total days left after subtracting offset from total days to date
        totalDaysLeft = n_DaysFromTheFirst - g_ReferenceObj.offset;

        var n_DaysIntoTheWeek = totalDaysLeft % n_DaysInAWeek;
        g_CurrMonthObj.loc_FirstDay.r = 1;
        g_CurrMonthObj.loc_FirstDay.c = n_DaysIntoTheWeek + 1;
        console.log('First Day of the Month: (' + g_CurrMonthObj.loc_FirstDay.r + ', ' + g_CurrMonthObj.loc_FirstDay.c + ')');

        var n_DaysInCurrMonth = g_DaysPerMonth_CurrYear[g_CurrMonthObj.month];
        n_DaysInCurrMonth -= (n_DaysInAWeek - n_DaysIntoTheWeek);
        // must add by 1, first week of the month is subtracted in previous line
        var lastWeekNumber = Math.floor(n_DaysInCurrMonth / n_DaysInAWeek) + 1;
        var n_DaysIntoLastWeek = n_DaysInCurrMonth % n_DaysInAWeek;
        if(n_DaysIntoLastWeek === 0)
            n_DaysIntoLastWeek = 7;

        g_CurrMonthObj.loc_LastDay.r = lastWeekNumber;
        g_CurrMonthObj.loc_LastDay.c = n_DaysIntoLastWeek;
        console.log('Last Day of the Month: (' + g_CurrMonthObj.loc_LastDay.r + ', ' + g_CurrMonthObj.loc_LastDay.c + ')');
    }

    function BuildPreviousMonthObject() {
        var lastDay = -1;
        var prevYear = g_CurrMonthObj.year;
        var prevMonth = g_CurrMonthObj.month - 1;
        if(prevMonth < 0) {
            --prevYear;
            prevMonth = 11;
            lastDay = g_DaysPerMonth_CurrYear[prevMonth];
        } else if(prevMonth === 1 && g_CurrMonthObj.year % 4 === 0) {
            lastDay = 29;
        } else {
            lastDay = g_DaysPerMonth_CurrYear[prevMonth];
        }

        g_CurrMonthObj.previousMonth.lastDay = lastDay;
        g_CurrMonthObj.previousMonth.month = prevMonth;
        g_CurrMonthObj.previousMonth.year = prevYear;

        var lastDayRow = 1;
        var lastDayCol = g_CurrMonthObj.loc_FirstDay.c - 1;

        if(lastDayCol < 1) {
            lastDayRow = 0;
            lastDayCol = 0;
        }

        g_CurrMonthObj.previousMonth.loc_LastDay.r = lastDayRow;
        g_CurrMonthObj.previousMonth.loc_LastDay.c = lastDayCol;

        console.log('Previous Month:', g_CurrMonthObj.previousMonth);
    }

    /*
        Purpose: Prepares the next month when user clicks on next-month-btn
        Returns:
    */
    function PrepNextMonthObject() {
        var nextYear = g_CurrMonthObj.year;
        var nextMonth = g_CurrMonthObj.month + 1;
        if(nextMonth > 11) {
            nextMonth = 0;
            ++nextYear;
        }

        BuildCurrentMonthObject(nextMonth, nextYear);
        BuildPreviousMonthObject();
    }

    function PrepPreviousMonthObject() {
        var prevYear = g_CurrMonthObj.year;
        var prevMonth = g_CurrMonthObj.month - 1;
        if(prevMonth < 0) {
            prevMonth = 11;
            --prevYear;
        }

        BuildCurrentMonthObject(prevMonth, prevYear);
        BuildPreviousMonthObject();
    }

    /*
        Purpose: Calculates today's date and the x,y position on the calendar
        Returns: Updates the g_CurrMonthObj object
    */
    function CalculateTargetDate(targetDay, targetMonth) {
        // Calculate the location of the first day of this month
        var n_DaysFromTheFirst = SumDaysWithinMonths(g_DaysPerMonth_CurrYear, g_ReferenceObj.month, targetMonth);

        // make the year's week begin on a Sunday
        var n_DaysInAWeek = 7;
        var totalDaysLeft = n_DaysFromTheFirst;
        // total days left after subtracting offset from total days to date
        if(g_ReferenceObj.offset !== 0)
            totalDaysLeft = n_DaysFromTheFirst - g_ReferenceObj.offset;

        // var totalWeeks = Math.floor(totalDaysLeft / n_DaysInAWeek);
        var n_DaysIntoTheWeek = totalDaysLeft % n_DaysInAWeek;

        var targetRow = Math.ceil(targetDay / n_DaysInAWeek);
        var targetCol = targetDay - (n_DaysInAWeek - n_DaysIntoTheWeek);
        targetCol %= n_DaysInAWeek
        if(targetCol === 0)
            targetCol = 7;

        g_CurrMonthObj.loc_TargetDay.r = targetRow;
        g_CurrMonthObj.loc_TargetDay.c = targetCol;

        console.log('Target Day of the Month: (' + g_CurrMonthObj.loc_TargetDay.r + ', ' + g_CurrMonthObj.loc_TargetDay.c + ')');
    }

    function PopulateMonth() {
        var max_rows = 7,
            max_cols = 8;

        var currMonth = g_DaysPerMonth_CurrYear[g_CurrMonthObj.month];
        var prevMonth = g_CurrMonthObj.previousMonth.lastDay;
        var lastDayCol = g_CurrMonthObj.previousMonth.loc_LastDay.c;

        var nextMonthIterator = 1;
        var lastMonthIterator = prevMonth - lastDayCol + 1;
        var currMonthIterator = 1;

        for(var row = 1; row < max_rows; ++row) {
            for(var col = 1; col < max_cols; ++col) {
                var calendarCell = '.row_' + row + ' .col_' + col;
                var dayIterator = calendarCell + ' .dayNumberOfMonth';

                if(lastMonthIterator <= prevMonth) {
                    $(dayIterator).html(lastMonthIterator);
                    $(calendarCell).addClass('previous-month');
                    ++lastMonthIterator;
                } else if(currMonthIterator > currMonth) {
                    $(dayIterator).html(nextMonthIterator);
                    $(calendarCell).addClass('next-month');
                    ++nextMonthIterator;
                } else {
                    $(dayIterator).html(currMonthIterator);
                    if(today.day === currMonthIterator &&
                        today.month === g_CurrMonthObj.month &&
                        today.year === g_CurrMonthObj.year) {
                        $(calendarCell).addClass('current-day');
                        $(calendarCell + ' .dayNumberOfMonth').attr('data-after', currMonthIterator);
                    }
                    ++currMonthIterator;
                }
            }
        }
    }

