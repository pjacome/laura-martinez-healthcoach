<div class="container">
    <div class="outer-card z-depth-2 blue lighten-100">
        <h5 class="white-text center">New Blog</h5>
        <form class="white">
            <div class="row">
                <div class="input-field col s12">
                    <input id="title" type="text" class="validate">
                    <label for="title">Title</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <input id="subheading" type="text" class="validate">
                    <label for="subheading">Subheading (Optional)</label>
                </div>
                <div class="input-field col s12 m6">
                    <input type="date" class="datepicker">
                    <label for="date">Date</label>
                </div>
            </div>

            <!-- Blog Content Wrapper -->
            <div class="blog-content-wrapper z-depth-5">
                
                <!-- Try #1 -->
                <div class="row">
                    <div class="col m1 center">
                        <div class="row">
                            <div class="col s12">
                                <a class="btn-floating btn-med waves-effect waves-light"><i class="material-icons">arrow_drop_up</i></a>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                                <a class="btn-floating btn-med waves-effect waves-light"><i class="material-icons">arrow_drop_down</i></a>
                            </div>
                        </div>
                    </div>
                    <!-- Actual Content -->
                    <div class="input-field col s12 m10">
                        <h6 class="grey-text">Paragraph 1</h6>
                        <div class="paragraphs" contenteditable="true"></div>
                    </div>
                    <div class="col m1 center">
                        <a class="btn-floating btn-med waves-effect waves-light red"><i class="material-icons">delete</i></a>
                    </div>
                </div>

                <!-- Try #2 -->
                <div class="div-table">
                    <div class="div-row">
                        <div class="div-col sm center">
                            <a class="btn-floating btn-med waves-effect waves-light vertically-align margin-bottom-10"><i class="material-icons">arrow_drop_up</i></a>
                            <a class="btn-floating btn-med waves-effect waves-light vertically-align"><i class="material-icons">arrow_drop_down</i></a>
                        </div>
                        <div class="div-col lg">
                            <h6 class="grey-text">Paragraph 1</h6>
                            <div class="paragraphs" contenteditable="true"></div>
                            <div class="formatting-buttons">
                                <button class="btn" type="button" onclick="document.execCommand('bold', false, null)"><i class="tiny material-icons">format_bold</i></button>
                                <button class="btn" type="button" onclick="document.execCommand('italic', false, null)"><i class="tiny material-icons">format_italic</i></button>
                                <button class="btn" type="button" onclick="document.execCommand('underline', false, null)"><i class="tiny material-icons">format_underlined</i></button>
                            </div>
                        </div>
                        <div class="div-col sm center">
                            <a class="btn-floating btn-med waves-effect waves-light vertically-align red"><i class="material-icons">delete</i></a>
                        </div>
                    </div>
                </div>

                <!-- This layout is a better idea for mobile (smaller screens) -->
                <div class="row hide-on-med-and-up">
                    <div class="center">
                        <a class="btn-floating btn-med waves-effect waves-light"><i class="material-icons">arrow_drop_up</i></a>
                        &nbsp;&nbsp;
                        <a class="btn-floating btn-med waves-effect waves-light"><i class="material-icons">arrow_drop_down</i></a>
                        &nbsp;&nbsp;
                        <a class="btn-floating btn-med waves-effect waves-light red"><i class="material-icons">delete</i></a>
                    </div>
                    <div class="input-field col s12">
                        <textarea id="paragraph-1" class="materialize-textarea"></textarea>
                        <label for="paragraph-1">Paragraph 1</label>
                    </div>
                </div>
            </div>
            <!-- Add Paragraph/Images buttons -->
            <div class="row padding-left-10">
                <a class="btn-floating btn-med waves-effect waves-light"><i class="material-icons">subject</i></a>
                &nbsp;&nbsp;
                <a class="btn-floating btn-med waves-effect waves-light"><i class="material-icons">photo</i></a>
                &nbsp;&nbsp;
                <a class="btn-floating btn-med waves-effect waves-light blue"><i class="material-icons">help_outline</i></a>
            </div>

            <!-- Form Buttons -->
            <button class="btn waves-effect waves-light" type="button" name="action">
                Submit
                <i class="material-icons right">send</i>
            </button>
            <button class="btn waves-effect waves-light" type="button" name="action">
                Preview
                <i class="material-icons right">view_day</i>
            </button>
        </form>
    </div>
</div>
